rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ”” Bildirimler (notifications)
    match /notifications/{notificationId} {

      // ğŸ‘€ Okuma izni â†’ GiriÅŸ yapÄ±lmÄ±ÅŸsa ve:
      // - userId alanÄ± yoksa (genel bildirim)
      // - ya da kullanÄ±cÄ± kendi bildirimini okuyorsa
      allow read: if request.auth != null &&
        (!("userId" in resource.data) || request.auth.uid == resource.data.userId);

      // ğŸ› ï¸ OluÅŸturma izni sadece admin tokenÄ±na sahip olanlara aÃ§Ä±k
      allow create: if request.auth != null && request.auth.token.admin == true;

      // ğŸ”„ GÃ¼ncelleme izni â†’ readBy veya dismissedBy listesine kullanÄ±cÄ± kendi UID'sini ekliyorsa
      allow update: if request.auth !=null &&
      (
        // âœ… readBy gÃ¼ncellemesi (bildirim okundu)
        (
          request.resource.data.readBy.size() == resource.data.readBy.size() + 1 &&
          request.resource.data.readBy.hasAll(resource.data.readBy) &&
          request.resource.data.readBy.hasOnly(resource.data.readBy.concat([request.auth.uid]))
        )

        ||

        // âŒ Bildirim gizleme (dismissedBy)
        (
          request.resource.data.dismissedBy.size() == resource.data.dismissedBy.size() + 1 &&
          request.resource.data.dismissedBy.hasAll(resource.data.dismissedBy) &&
          request.resource.data.dismissedBy.hasOnly(resource.data.dismissedBy.concat([request.auth.uid]))
        )
      );

      // ğŸ—‘ï¸ Silme â†’ Sadece bildirimin sahibi silebilir
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ğŸ‘¤ KullanÄ±cÄ± profilleri
    match /users/{userId} {
      // KullanÄ±cÄ± sadece kendi profilini okuyabilir ve gÃ¼ncelleyebilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“ Notlar (notes)
    match /notes/{noteId} {
      // OluÅŸturma sÄ±rasÄ±nda userId alanÄ± kendisine ait olmalÄ±
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Okuma, gÃ¼ncelleme, silme sadece sahibine aÃ§Ä±k
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // âœ… GÃ¶revler (tasks)
    match /tasks/{taskId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ğŸ‘¥ Adaylar (candidates)
    match /candidates/{candidateId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ğŸª Ã‡erez izinleri
    match /cookiePreferences/{userId} {
      // Sadece kendi Ã§erez tercihlerini okuyabilir/yazabilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸš« DiÄŸer tÃ¼m belgeler varsayÄ±lan olarak kapalÄ±
    match /{document=**} {
      allow read, write: if false;
    }
  }
}